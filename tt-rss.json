{
    "tt-rss": {
        "description": "Tiny Tiny RSS web-based news feed (RSS/Atom) reader and aggregator",
        "version": "1.0.0",
        "website": "https://tt-rss.org/gitlab/fox/tt-rss",
        "more_info": "",
        "container_links": {
            "tt-rss": [
                {
                    "name": "db",
                    "source_container": "tt-rss-postgres"
                }
            ]
        },
        "containers": {
            "tt-rss": {
                "image": "x86dev/docker-ttrss",
                "tag": "latest",
                "launch_order": 2,
                "ports": {
                    "80": {
                        "description": "tt-rss Web port. Suggested default: 8080",
                        "host_default": 8080,
                        "label": "Web port",
                        "protocol": "tcp",
                        "ui": true
                    }
                },
                "environment": {
                    "DB_ENV_USER": {
                        "description": "Repeat the name for the database admin user",
                        "label": "DB admin username",
                        "index": 1
                    },
                    "DB_ENV_PASS": {
                        "description": "Repeat the password for the database admin user",
                        "label": "DB admin password",
                        "index": 2
                    }
                }
            },
            "tt-rss-postgres": {
                "image": "illi/postgres",
                "tag": "9.5",
                "launch_order": 1,
                "volumes": {
                    "/var/lib/postgresql/data": {
                        "description": "Choose a Share for tt-rss's postgresql database. Eg: create a Share called ttrss-db for this purpose alone.",
                        "label": "DB Storage",
                        "min_size": 1073741824
                    }
                },
                "environment": {
                    "POSTGRES_USER": {
                        "description": "Choose the name for the database admin user",
                        "label": "DB admin username",
                        "index": 1
                    },
                    "POSTGRES_PASSWORD": {
                        "description": "Choose a secure password for the database admin user",
                        "label": "DB admin password",
                        "index": 2
                    }
                }
            }
        }
    }
}
